    <div class="music-weather-box-container">
        <div class="music-weather-box-information">
            @{
                /*music disc code goes here*/
            }
            Todays music disc <br />



            @{
                <audio id="audio_play">
                    <source src="/Audios/Music Discs/Chirp.ogg" type="audio/ogg" />
                </audio>

                string discimg = $"/Pictures/Discs/{SQlite.GetDailyMusic()}.webp";
                <img style="width: 20%;" src="@discimg" onClick="document.getElementById('audio_play').play(); return false;" />
                /*code for what music disc it is*/
            }
            @SQlite.GetDailyMusic()

        </div>
        <div class="music-weather-box-information">
            @{
                /*weather code goes here*/
            }
            Todays weather

            <img style="width: 20%;" src="/Pictures/Index/disc.gif" />
 
        </div>

    </div>

</div>

<img style="background-color: white;" src="/Pictures/Index/divider.svg" />

