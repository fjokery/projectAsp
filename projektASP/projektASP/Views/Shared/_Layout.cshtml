<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - projektASP</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projektASP.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light">
            <div class="container-fluid">
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <!--Idk om vi faktiskt ska ha comic sans men den e där just nu under style-->
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'Comic Sans MS';">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="hej" style="font-family: 'Comic Sans MS';">Forum</a>
                        </li>
                        <!--Den här ska bytas ut mot en logotyp som man kan klicka och komma till home! (därmed behöver vi inte "home" knappen och kan utnyttja den till annat-->
                        <!--OBS! den ska ligga i mitten-->
                        <a class="navbar-item" asp-area="" asp-controller="Home" asp-action="Index" style="font-family: 'Comic Sans MS';">projektASP</a>

                        @SQlite.GetUsername(Context)


                        <a class="nav-link text-white loginButton" style="display: @SQlite.LoginOrUser(Context); font-family: 'Comic Sans MS';" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        <a class="nav-link text-white loginButton" style="display: @SQlite.ShowLogoutButton(Context); font-family: 'Comic Sans MS';" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>

                    </ul>

                </div>
               
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
